{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r backend/requirements_production.txt"
  },
  "deploy": {
    "startCommand": "cd backend && gunicorn app.main_production:app -w 4 -k uvicorn.workers.UvicornWorker --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 30
  },
  "environments": {
    "production": {
      "variables": {
        "ENVIRONMENT": "production",
        "SECRET_KEY": "${{ secrets.SECRET_KEY }}",
        "ALLOWED_ORIGINS": "https://espacoviv.railway.app,https://espacoviv.com"
      }
    }
  }
}